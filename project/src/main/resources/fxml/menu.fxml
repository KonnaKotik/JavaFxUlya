<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" stylesheets="/css/menu.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.controller.MenuController">
  <children>
    <MenuBar layoutX="4.0" layoutY="7.0" prefHeight="1.0" prefWidth="600.0" VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="400.0" prefHeight="400.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
      <children>
             <Button fx:id="exitButton" alignment="TOP_RIGHT" layoutX="524.0" layoutY="14.0" mnemonicParsing="false" onAction="#clickExitButton" prefHeight="25.0" prefWidth="59.0" text="Назад" textFill="#322e2e" />
            <Button fx:id="employeeButton" alignment="CENTER" layoutX="242.0" layoutY="104.0" mnemonicParsing="false" onAction="#click" prefHeight="33.0" prefWidth="116.0" text="Сотрудники" />
            <Button fx:id="childrenButton" alignment="CENTER" layoutX="242.0" layoutY="241.0" mnemonicParsing="false" onAction="#clickChildren" prefHeight="33.0" prefWidth="116.0" text="Дети сотрудников" />
            <Button fx:id="documentButton" alignment="CENTER" contentDisplay="CENTER" layoutX="242.0" layoutY="173.0" mnemonicParsing="false" onAction="#clickDocument" prefHeight="33.0" prefWidth="116.0" text="Документы" />
      </children>
    </AnchorPane>
  </children>
</VBox>
